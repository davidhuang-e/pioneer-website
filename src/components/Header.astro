  en: { home: "/en", services: "/en/services", contact: "/en/contact" },
  zh: { home: "/zh", services: "/zh/services", contact: "/zh/contact" }
};
---
<header>
  <nav>
    <a href={navLinks[lang].home}>ホーム / Home / 首页</a> |
